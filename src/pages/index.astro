---
import Layout from '../components/Layout.astro';
---

<Layout title="Patrick A. Alcisto: Senior UI Developer">
  <header class="grid h-[333px]">
    <div class="header-left"></div>
    <div class="header-content flex justify-center items-center">
      <h1 class="font-title text-7xl font-normal">hello!</h1>
    </div>
    <div class="header-right"></div>
  </header>
  <main class="flex w-[min(100%,_320px)] mx-auto bg-light-black">
    <p class="font-body font-light text-2xl/normal tracking-wider">
      I'm <span class="text-crimson font-normal italic">Patrick Alcisto</span
      >.<br />A <span
        ><span class="text-zest">UI Developer</span><span class="hidden"
          >Frontend Developer</span
        >.<br />A <span class="text-zest">mountain biker</span><span
          class="hidden">R/C Car Enthusiast</span
        ></span
      >.<br /> A <span class="text-zest">dad to three rad dogs</span><span
        class="hidden">boyfriend to an awesome woman</span
      >!
    </p>
  </main>
</Layout>

<style>
  header {
    background-image: url('/images/hero-polygon.png');
    background-position: center top;
    background-repeat: no-repeat;
    grid-template-columns:
      minmax(0, 1fr)
      min(100%, var(--content-max-width))
      minmax(0, 1fr);
  }

  .header-left {
    background: no-repeat 0 0 / 100% 332px
      linear-gradient(180deg, hsl(9 87% 54%), hsl(5 83% 53%));
  }

  .header-right {
    background: no-repeat 0 0 / 100% 246px
      linear-gradient(180deg, hsl(13.8 83.11% 55.88%), hsl(14.69 85.22% 54.9%));
  }
</style>
