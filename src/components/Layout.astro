---
import GithubIcon from '../components/icons/Github.astro';
import CautionIcon from '../components/icons/Caution.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const currentYear = new Date(Date.now()).getFullYear();
---

<!doctype html>
<html lang="en" class="theme-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Patrick A. Alcisto" />
    <meta
      name="description"
      content="Senior UI Developer passionate about crafting excellent user experiences on the web and mobile."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <footer class="flex flex-col items-center">
      <div class="mountains h-[169px]"></div>
      <ul id="socials" class="flex gap-x-10 mt-6">
        <li>
          <a href="https://github.com/palcisto" class="text-accent">Github</a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/patrickalcisto/"
            class="text-accent">LinkedIn</a
          >
        </li>
        <li>
          <a
            href="https://portal.g2i.co/developer/Patrick-Alcisto/22c9f395-29f8-4820-b737-1e83dfce07a0"
            class="text-accent">G2i</a
          >
        </li>
      </ul>

      <p>&copy;{currentYear} Patrick A. Alcisto</p>
    </footer>
  </body>
</html>

<style is:global>
  /* CSS HEX */
  --grape: #642ca9ff;
  --pale-dogwood: #f4d6ccff;
  --hunyadi-yellow: #f4b860ff;
