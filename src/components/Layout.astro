---
import '../style/styles.css';
import Footer from './Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const currentYear = new Date(Date.now()).getFullYear();
---

<!doctype html>
<html lang="en" class="bg-[var(--sherpa-blue-dark)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Patrick A. Alcisto" />
    <meta
      name="description"
      content="Senior UI Developer passionate about crafting excellent user experiences on the web and mobile."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link
      rel="preload"
      href="/fonts/ConfigRoundedRegular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/ConfigRoundedLight.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/ConfigRoundedItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="preload" href="/images/hero-polygon.webp" as="image" />
    <title>{title}</title>
  </head>
  <body class="grid grid-rows-[1fr] text-neutral-200 min-h-screen">
    <div
      class="grid grid-rows-[333px_auto_1fr] gap-4 md:gap-8 xl:gap-12 bg-light-black"
    >
      <slot />

      <Footer currentYear={currentYear} />
    </div>
  </body>
</html>
